
<div class="from_user">
  <div>
    <h1>お問い合わせ</h1>
  </div>
  <div>
      <% @from_user.errors.full_messages.each do |message|%>
      <%= message %>
      <%end%>
  </div>
  <div class="from_user_list">
    <%= form_tag("/from_user/data")do %>    
      <div>
        <label for="name">名前:</label>
        <input type="text" id="name" name="name">
      </div>
      <div>
        <label for="mail">E-mail:</label>
        <input type="email" id="mail" name="email">
      </div>
      <div>
        <label for="msg" class="from_user_list_toi">お問い合わせ内容:</label>
        <textarea id="msg" name="message"></textarea>
      </div>
      <button type="submit" class="from_user_list_sousinn">送信</button>
    <%end%>  
  </div>
</div>